#!/bin/bash
# Copyright Â© 2016 Fedor Mankov envieid0c (envieidoc@gmail.com)

APP=`osascript -e 'tell application to POSIX path of (path to app "WNU" as alias)' | sed -e 's/ /\\ /g'`

grep -rl "0" "$APP"*rfoff.rtl > "$APP"MAC && sed -e 's/ /\\ /g' "$APP"MAC > "$APP"DEVICE && rm "$APP"MAC

exec 6<&0 
exec < "$APP"DEVICE
read a1
echo "1" > "$a1"

osascript -e 'quit app "WNU"'
osascript -e 'open app "WNU"'
pkill -f ~/.io.wnuup

exit 0
